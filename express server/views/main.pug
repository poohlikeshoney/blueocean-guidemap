                div(class="row")
                    img(class="icon", src="/static/img/icons/household_goods_store.png", alt="생활용품 판매점 아이콘")
                    img(class="arrow", src="/static/img/icons/arrow.png", alt="화살표")
            a(href="/coin_laundry", class='card')
                div
