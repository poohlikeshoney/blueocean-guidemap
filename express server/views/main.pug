extends base/layout.pug

block custom_css 
    link(rel="stylesheet", href='/static/css/main.css')
block content   
    div(class="maig_bg_box")
        div(class="overlay")
        img(src="/static/img/main_bg.jpg", alt="배경이미지, 산에서 자라는 과실나무들.", class="main_bg_img")
        div(class="text_box")
            h4 Blue Ocean Residence Hotel
            h1 GUIDE MAP
            a(target="_blank", href="https://www.google.co.kr/maps/place/%EB%B8%94%EB%A3%A8%EC%98%A4%EC%85%98+%EB%A0%88%EC%A7%80%EB%8D%98%EC%8A%A4+%ED%98%B8%ED%85%94/data=!3m1!4b1!4m9!3m8!1s0x357b831e67c49c7b:0x6517c353a4fffbf0!5m2!4m1!1i2!8m2!3d37.4872679!4d126.5635705!16s%2Fg%2F11r4wssddm?entry=ttu",class='row go_to_hotel_btn')
