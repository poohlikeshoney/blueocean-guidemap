        div(class='card_box')
            a(href="/restaurant", class='card')
                div
                    p( class="title") Restaurant
                    p(class="kr_desc") 레스토랑/카페
                div(class="row")
                    img(class="icon", src="/static/img/icons/restaurant.png", alt="레스토랑 아이콘")
                    img(class="arrow", src="/static/img/icons/arrow.png", alt="화살표")
            a(href="/convenience_store", class='card')
                div
                    p(class="title") Convenience store
                    p(class="kr_desc") 편의점
                div(class="row")
                    img(class="icon", src="/static/img/icons/convenience_store.png", alt="편의점 아이콘")
                    img(class="arrow", src="/static/img/icons/arrow.png", alt="화살표")
            a(href="/pharmacy", class='card')
                div
                    p(class="title") Pharmacy
                    p(class="kr_desc") 약국
                div(class="row")
                    img(class="icon", src="/static/img/icons/pharmacy.png", alt="약국 아이콘")
                    img(class="arrow", src="/static/img/icons/arrow.png", alt="화살표")
            a(href="/hospital", class='card')
                div
                    p(class="title") Hospital
                    p(class="kr_desc") 병원
                div(class="row")
                    img(class="icon", src="/static/img/icons/hospital.png", alt="병원 아이콘")
